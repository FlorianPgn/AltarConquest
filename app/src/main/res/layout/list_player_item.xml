<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        app:srcCompat="@drawable/altar_conquest"
        android:id="@+id/list_item_pic"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/altar_conquest"
        android:layout_height="50dp"
        android:layout_width="50dp" />

    <TextView
        android:text="Chargement du joueur..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_text"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/list_item_pic"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/list_item_pic"
        android:translationY="10dp" />

</RelativeLayout>