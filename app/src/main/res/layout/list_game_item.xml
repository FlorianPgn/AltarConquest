<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        app:srcCompat="@drawable/altar_conquest"
        android:id="@+id/list_item_pic"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/altar_conquest"
        android:layout_height="50dp"
        android:layout_width="50dp" />

    <Button
        android:text="Rejoindre"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/list_item_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Nombre de joueurs..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_nb_joueurs"
        android:layout_alignBottom="@+id/list_item_pic"
        android:layout_marginBottom="8dp"
        android:layout_alignEnd="@+id/list_item_text"
        android:layout_toEndOf="@+id/list_item_pic" />

    <TextView
        android:text="Chargement de la partie..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_text"
        android:layout_above="@+id/list_nb_joueurs"
        android:layout_toEndOf="@+id/list_item_pic" />

</RelativeLayout>