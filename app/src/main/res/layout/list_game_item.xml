<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@color/cast_expanded_controller_progress_text_color">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/holo_green_light">

            <Button
                android:text="Rejoindre"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/list_item_button"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                app:srcCompat="@drawable/altar_conquest"
                android:id="@+id/list_item_pic"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/altar_conquest"
                android:layout_height="50dp"
                android:layout_width="50dp" />

            <TextView
                android:text="Nombre de joueurs..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/list_nb_joueurs"
                android:layout_below="@+id/list_item_text"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/list_item_pic" />

            <TextView
                android:text="Chargement de la partie..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/list_item_text"
                android:layout_marginTop="8dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/list_item_pic" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>