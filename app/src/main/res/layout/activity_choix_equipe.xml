<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_accueil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.florian.altarconquest.EcranAccueil"
    android:background="@drawable/fond" >

    <ImageView
        android:background="@drawable/choix_equipe"
        android:id="@+id/choix_equipe"
        android:layout_height="110dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/bouton_retour"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:background="@drawable/equipe_bleue"
        android:id="@+id/bouton_equipe_bleue"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="87dp" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:background="@drawable/equipe_rouge"
        android:id="@+id/bouton_equipe_rouge"
        android:layout_marginBottom="38dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/bouton_equipe_bleue"
        android:layout_alignStart="@+id/bouton_equipe_bleue" />

    <ImageButton
        android:background="@drawable/retour"
        android:id="@+id/bouton_retour"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="21dp"
        android:layout_marginStart="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>